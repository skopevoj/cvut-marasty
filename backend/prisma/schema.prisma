generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  uid      String    @id // 64-char UID
  username String
  attempts Attempt[]
  createdAt DateTime @default(now())
}

model Attempt {
  id           Int      @id @default(autoincrement())
  questionHash String
  userAnswers  String // Store JSON string of what user answered
  isCorrect    Boolean
  timestamp    DateTime @default(now())
  user         User     @relation(fields: [userUid], references: [uid])
  userUid      String

  @@index([questionHash])
}
