generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  uid       String    @id
  username  String
  createdAt DateTime  @default(now())
  attempts  Attempt[]
}

model Question {
  hash    String   @id
  answers Answer[]
}

model Answer {
  hash         String    @id
  questionHash String
  question     Question  @relation(fields: [questionHash], references: [hash])
  attempts     Attempt[]

  @@index([questionHash])
}

model Attempt {
  id         Int      @id @default(autoincrement())
  userUid    String
  answerHash String
  isCorrect  Boolean
  timestamp  DateTime @default(now())
  answer     Answer   @relation(fields: [answerHash], references: [hash])
  user       User     @relation(fields: [userUid], references: [uid])

  @@index([answerHash])
  @@index([userUid])
  @@index([answerHash, userUid])
}
