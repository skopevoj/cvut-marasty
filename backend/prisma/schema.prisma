generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uid       String    @id
  username  String
  createdAt DateTime  @default(now())
  attempts  Attempt[]
  comments  Comment[]
}

model Question {
  hash     String    @id
  answers  Answer[]
  comments Comment[]
}

model Answer {
  hash         String    @id
  questionHash String
  question     Question  @relation(fields: [questionHash], references: [hash])
  attempts     Attempt[]

  @@index([questionHash])
}

model Attempt {
  id         Int      @id @default(autoincrement())
  userUid    String
  answerHash String
  isCorrect  Boolean
  timestamp  DateTime @default(now())
  answer     Answer   @relation(fields: [answerHash], references: [hash])
  user       User     @relation(fields: [userUid], references: [uid])

  @@index([answerHash])
  @@index([userUid])
  @@index([answerHash, userUid])
}

model Comment {
  id           Int       @id @default(autoincrement())
  text         String
  timestamp    DateTime  @default(now())
  userUid      String
  questionHash String
  parentId     Int?
  parent       Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies      Comment[] @relation("CommentReplies")
  user         User      @relation(fields: [userUid], references: [uid])
  question     Question  @relation(fields: [questionHash], references: [hash])

  @@index([questionHash])
  @@index([userUid])
  @@index([parentId])
}
